<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.msa.kyj_prj.weather.LocationDAO">

    <!-- 전체 지역 목록 조회 -->
    <select id="getAllLocations" resultType="com.msa.kyj_prj.weather.Location">
        SELECT * FROM location
    </select>

    <!-- 지역 추가 -->
    <insert id="insertLocation" parameterType="com.msa.kyj_prj.weather.Location">
        INSERT INTO location (
            weather_location, weather_location_x, weather_location_y
        ) VALUES (
            #{weather_location}, #{weather_location_x}, #{weather_location_y}
        )
    </insert>

    <!-- 지역 삭제 -->
    <delete id="deleteLocation" parameterType="string">
        DELETE FROM location WHERE weather_location = #{weather_location}
    </delete>

</mapper>
